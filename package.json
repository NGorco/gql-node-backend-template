{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "dev": "rm -rf dist/* && concurrently \"sleep 1 && npm run watch-dev\" \"npm run watch-compile\"",
    "watch-compile": "swc src -w --out-dir dist",
    "watch-dev": "nodemon",
    "build-tsc": "tsc --p tsconfig.json --noEmit && swc src -d dist",
    "build": "swc src -d dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "migrate-test-db": "env-cmd -f .env.test npx sequelize-cli db:migrate",
    "seed-test-db": "env-cmd -f .env.test npx sequelize-cli db:seed:all",
    "install-docker-db": "docker run -v $(pwd)/backups:/var/lib/backups --name test_postgres -p 3040:5432 -e POSTGRES_DB=test -e POSTGRES_PASSWORD=test -e POSTGRES_USER=test_user -d postgres",
    "setup-test-db": "npm run build && npm run install-docker-db && sleep 3 && npm run migrate-test-db && npm run seed-test-db",
    "postinstall": "mkdir -p .git/hooks/ && cp console/pre-commit .git/hooks/ && chmod +x .git/hooks/pre-commit && echo 'Pre-commit hook copied'"
  },
  "lint-staged": {
    "*.js|*.ts": [
      "prettier --write",
      "eslint"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,json,js",
    "ignore": [],
    "exec": "cross-env NODE_ENV=local node --inspect -r source-map-support/register ./dist/index.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@graphql-yoga/node": "^2.13.13",
    "@types/express": "^4.17.17",
    "dotenv": "^16.0.2",
    "graphql": "^16.6.0",
    "knex": "^2.3.0",
    "pg": "^8.8.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.41",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.36.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "express": "^4.18.1",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.6",
    "source-map-support": "^0.5.21"
  }
}
